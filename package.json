{
  "name": "scalardb-installer",
  "version": "2.0.0",
  "description": "ScalarDB/ScalarDL Installation Tool",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node dashboard/server.js",
    "start:medical": "node dashboard/medical-server.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "scalardb",
    "scalardl",
    "database",
    "installer"
  ],
  "author": "ScalarDB Installer Team",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "tar": "^6.2.0",
    "yauzl": "^2.10.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "installer/**/*.js",
      "!installer/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}